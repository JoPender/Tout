{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cartes list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Image</th>
                <th>Prix</th>
                <th>Stock</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for carte in cartes %}
            <tr>
                <td><a href="{{ path('carte_show', { 'id': carte.id }) }}">{{ carte.id }}</a></td>
                <td>{{ carte.nom }}</td>
                <td>{{ carte.description }}</td>
                <td><img src="{{ asset('bundles/app/images/meals/'~carte.image)}}" alt="menu"></td>
                <td>{{ carte.prix }}</td>
                <td>{{ carte.stock }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('carte_show', { 'id': carte.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('carte_edit', { 'id': carte.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('carte_new') }}">Create a new carte</a>
        </li>
    </ul>
{% endblock %}
